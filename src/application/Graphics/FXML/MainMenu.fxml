         <children>
            <Button fx:id="playButton" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#playOnClick" text="Play" VBox.vgrow="NEVER">
               <effect>
                  <Blend mode="RED" opacity="0.0" />
               </effect>
            </Button>
            <Button fx:id="scoreButton" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#scoreOnClick" text="Score" VBox.vgrow="NEVER" />
            <Button fx:id="songsButton" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#songsOnClick" text="Songs" />
            <Button fx:id="exitButton" maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#exitOnClick" text="Exit" />
         </children>
      </VBox>
   </center>
</BorderPane>
